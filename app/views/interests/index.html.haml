- title('Listing interests')

%table
  %thead
    %tr
      %th Name
      %th Sort
      %th Token
      %th Work name
      %th Series name
      %th
      %th
      %th

  %tbody
    - @interests.each do |interest|
      %tr
        %td= interest.name
        %td= interest.sort
        %td= interest.token
        %td= interest.work_name
        %td= interest.series_name
        %td= link_to 'Show', interest
        %td= link_to 'Edit', edit_interest_path(interest)
        %td= link_to 'Destroy', interest, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= new_button(:interest)
