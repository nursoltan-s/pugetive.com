- title('Titles')

- Interest.all.each do |interest|
  = link_to(interest.name, interest_id: interest.id)

%table
  %thead
    %tr
      %th Sort
      %th Name
      %th Interest
      %th
      %th

  %tbody
    - @titles.alpha.each do |title|
      %tr
        %td
          = form_for title do |f|
            = f.select(:sort, options_for_select(1..@titles.count, selected: title.sort))
            = submit(f)
        %td= link_to(title.name, title)
        %td= title.interest.name
        %td= link_to icon(:edit), edit_title_path(title)
        %td= link_to icon(:delete), title, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Title', new_title_path, class: 'button'
