- title('Titles')

%table
  %thead
    %tr
      %th Name
      %th Category
      %th
      %th

  %tbody
    - @titles.each do |title|
      %tr
        %td= link_to(title.name, title)
        %td= title.category
        %td= link_to edit_icon, edit_title_path(title)
        %td= link_to destroy_icon, title, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Title', new_title_path, class: 'button'
