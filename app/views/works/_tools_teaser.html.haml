- tools = Tool.send(work.interest.token).sort{|a,b| a.name <=> b.name}
- if tools.any?
  %h3 Tools
  - tools.each do |tool|
    - if work.tools.include?(tool)
      %div= link_to(raw("#{raw(destroy_icon)} #{tool.name}"), work.wields.find_by_tool_id(tool.id), method: :delete, class: 'button remove-button', data: {confirm: 'Are you sure?'})
    - else
      = form_for work.wields.new(tool_id: tool.id) do |f|
        = f.hidden_field(:work_id)
        = f.hidden_field(:tool_id)
        = f.submit(tool.name)
