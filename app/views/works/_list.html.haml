- show_year ||= false
- show_meta ||= false
- show_genre ||= false
- embedded_content ||= false

- if embedded_content
  -# Refactor DUPE
  %section.works
    %ol.works
      - works.each do |work|
        %li{class: work.favorite? ? 'favorite' : nil}
          %span.work-name= work.decorate.title
          - if work.photography?
            .row
              .small-2.columns= work.thumbnail
              .small-6.columns.end
                - if show_meta
                  %span.meta
                    %span.years= work.years
                    - if show_genre
                      = work.decorate.genre_info
                    = work.decorate.album_info

- else
  .row
    .medium-7.medium-offset-5.columns
      -# Refactor DUPE
      %section.works
        %ol.works
          - works.each do |work|
            %li{class: work.favorite? ? 'favorite' : nil}
              %span.work-name= work.decorate.title

