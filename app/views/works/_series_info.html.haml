%table.series-info
  %tbody
    - work.series_works.each do |series_work|
      - series = series_work.series
      %tr
        %td.left-nav
          = thumbnail(work.prev_in_series(series))
          %span.thumb-nav-icon
            = link_to(left_icon, work.prev_in_series(series))
        %td.series-link
          From the series
          = link_to(series.name, series)
        %td.right-nav
          = thumbnail(work.next_in_series(series))
          %span.thumb-nav-icon
            = link_to(right_icon, work.next_in_series(series))


