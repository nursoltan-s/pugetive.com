%section.work
  .row
    .small-12.columns
      %h3
        = work.name
        %smaller.subdued= link_to(edit_icon, edit_work_path(work), data: {visible_to: 'admin'})
      %p
        %span.subdued Status:
        %b= status(work.status)
        %i.subdued= work.status_message
      %p= work.summary
      %p.subdued= work.date_range

  .row
    .small-12.columns{data: {visible_to: 'admin'}}
