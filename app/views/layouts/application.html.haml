!!! html5
%html{lang: "en", class: html_classes}
  %head
    %title= raw(compound_page_title(yield(:title)))

    = stylesheet_link_tag 'application', media: :all
    = javascript_include_tag 'application'
    = render "layouts/meta"

  %body
    %section#wrapper
      %section#header= render 'layouts/header'
      %section#main
        .row
          .medium-7.medium-offset-5.columns
            - if @show_title
              %h1= content_for(:title)
        .row
          .large-12.columns
            = yield
    %section#footer= render 'layouts/footer'