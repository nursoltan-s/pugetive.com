%section#public-menu-wrapper
  .title-bar{data: {responsive_toggle: 'public-menu', hide_for: 'medium'}}
    %button.menu-icon{type: 'button', data: {toggle: true}}
    .title-bar-title Menu

  #public-menu.top-bar
    .top-bar-left
      %ul.dropdown.menu.vertical.medium-horizontal{data: {dropdown_menu: true}}
        %li.menu-text= link_to(raw("#{home_icon} Home"), root_path)
        - Interest.live.each do |interest|
          - if CONFIG[Rails.env]["#{interest.token}_live"]
            %li.menu-text.interest-item= link_to(raw("#{interest_icon(interest)} #{interest.name}"), interest)
    .top-bar-right
      %ul.menu.auth
        %li.menu-text
          - if user_signed_in?
            = link_to(raw("#{delete_icon} Sign Out"), destroy_user_session_path, :method => :delete, class: 'secondary')
          - else
            = link_to(raw("#{signin_icon} Sign In"), new_user_session_path, class: 'secondary subdued')


