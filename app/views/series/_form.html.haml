= form_for @series do |f|
  - if @series.errors.any?
    #error_explanation
      %h2= "#{pluralize(@series.errors.count, "error")} prohibited this series from being saved:"
      %ul
        - @series.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :summary
    = f.text_field :summary
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
