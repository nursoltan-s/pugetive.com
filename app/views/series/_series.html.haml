- cache series do
  %section.series{class: series.interest}
    .row
      .medium-3.columns.medium-offset-2.medium-text-right.title-box
        %h3
          = link_to(series.name, series)
        %p
          %span.date-range
            = series.years
        %span.titles
          = raw(series.titles.map{|t| link_to(t.name, t)}.join(', '))
        %span.tools
          = raw(series.instruments.map{|t| link_to(t.name, t)}.join(', '))

        -#/ [image]
        %p.admin{data: {visible_to: 'admin'}}
          %smaller.subdued
            = link_to(new_icon, new_series_work_path(series_id: series.id), rel: 'nofollow')
            = link_to(edit_icon, edit_series_path(series), rel: 'nofollow')
            = link_to(destroy_icon, series, :method => :delete, :data => { :confirm => 'Are you sure?' }, rel: 'nofollow')
      .medium-5.columns.end.info-box
        %p.artist
          by
          %b= series.artist.name
          - if series.artist.alias?
            %span.subdued [solo alias]
        %p= series.summary
        - if series.music?
          %ol.works
            - series.works.each do |work|
              = render 'works/work_line_item', work: work

        - elsif series.photography?
          [tiny thumbnails]
