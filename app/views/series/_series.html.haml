- cache series do
  %section.series{class: series.interest}
    .row
      .medium-3.columns.medium-offset-2.medium-text-right.title-box
        %h3
          = link_to(series.name, series)
        %span.titles
          = series.titles.map{|t| t.name}.join(', ')

        -#/ [image]
        %p.admin{data: {visible_to: 'admin'}}
          %smaller.subdued= link_to(edit_icon, edit_series_path(series))
      .medium-5.columns.end.info-box
        %p
          %span.date-range
            = series.date_range
        %p= series.summary
        - if series.music?
          %ol
            - series.works.each do |work|
              %li= link_to(work.name, work)
        - elsif series.photography?
          [tiny thumbnails]  }
