- cache series do
  %section.series{class: series.interest}
    .row
      .medium-3.columns.medium-offset-2.medium-text-right.title-box
        %h3
          = link_to(series.name, series)
        %span.titles
          = raw(series.titles.map{|t| link_to(t.name, t)}.join(', '))
        %span.tools
          = raw(series.instruments.map{|t| link_to(t.name, t)}.join(', '))

        -#/ [image]
        %p.admin{data: {visible_to: 'admin'}}
          %smaller.subdued
            = link_to(new_icon, new_series_work_path(series_id: series.id))
            = link_to(edit_icon, edit_series_path(series))
            = link_to(destroy_icon, series, :method => :delete, :data => { :confirm => 'Are you sure?' })
      .medium-5.columns.end.info-box
        %p.artist
          %b Artist:
          = series.artist.name
          - if series.artist.alias?
            %span.subdued [solo alias]
        %p
          %span.date-range
            = series.date_range
        %p= series.summary
        - if series.music?
          %ol.works
            - series.works.each do |work|
              %li{class: work.favorite? ? 'favorite' : nil}= link_to(work.name, work)
        - elsif series.photography?
          [tiny thumbnails]  }
