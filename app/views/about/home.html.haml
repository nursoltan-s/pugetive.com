- title('Home', false)
- add_html_class('mini')

- cache 'home-wrapper', expires_in: 1.day do
  #home-wrapper
    .row
      .medium-4.columns.medium-offset-2.end
        %h1 Todd Gehman
        %h2.subhead= CONFIG[Rails.env][:host_with_port]

    .row
      -# #home-main.medium-6.large-6.columns.medium-offset-3.large-offset-3
      .medium-4.columns.medium-offset-2
        %ul
          - Interest.live.each do |interest|
            %li{class: interest.token}
              = link_to(raw("#{interest_icon(interest)} #{interest.name}"), interest, class: 'callout')

      .medium-4.columns.end
        %ul.photo-grid
          - Work.random_photos(25).in_groups(5) do |group|
            %li.callout
              - group.each do |photo|
                - next if photo.nil?
                = link_to(thumbnail(photo), photo)
