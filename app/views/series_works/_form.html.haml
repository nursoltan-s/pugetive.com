= form_for @series_work do |f|
  - if @series_work.errors.any?
    #error_explanation
      %h2= "#{pluralize(@series_work.errors.count, "error")} prohibited this series_work from being saved:"
      %ul
        - @series_work.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :series_id
    = f.number_field :series_id
  .field
    = f.label :work_id
    = f.number_field :work_id
