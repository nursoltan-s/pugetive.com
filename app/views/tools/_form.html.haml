= form_for @tool do |f|
  - if @tool.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tool.errors.count, "error")} prohibited this tool from being saved:"
      %ul
        - @tool.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :type
    = f.select :type, options_for_select(Tool::TYPES, selected: @tool.type)
  .field
    = f.label :category
    = f.select :category, options_for_select(PURSUITS, selected: @tool.category)
  .field
    = f.label :front_end
    = f.check_box :front_end
  .actions
    = f.submit 'Save'
