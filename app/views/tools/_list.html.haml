%section.tools.panel
  .row
    - if project.systems.any?
      .medium-3.columns
        %h5 Systems & Frameworks
        = render project.systems
    - if project.languages.any?
      .medium-3.columns
        %h5 Languages
        = render project.languages
    - if project.programs.any?
      .medium-3.columns
        %h5 Software
        = render project.programs
    - if project.concepts.any?
      .medium-3.columns
        %h5 Concepts
        = render project.concepts


  %p{data: {visible_to: 'admin'}}= link_to(new_icon, new_wield_path(project_id: project.id), class: 'button')