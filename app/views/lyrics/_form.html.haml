- @lyric.work_id ||= params[:work_id]
= form_for @lyric do |f|
  - handle_errors(@lyric)
  = label_field(f.label(:work_id),
                f.select(:work_id, options_from_collection_for_select(Work.lyrical.sorted, :id, :name, selected: @lyric.work_id)))
  = label_field(f.label(:content), f.text_area(:content))
  = submit(f)
