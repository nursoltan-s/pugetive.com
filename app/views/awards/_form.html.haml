= form_for @award do |f|
  - if @award.errors.any?
    #error_explanation
      %h2= "#{pluralize(@award.errors.count, "error")} prohibited this award from being saved:"
      %ul
        - @award.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :official_title
    = f.text_field :official_title
  .field
    = f.label :summary
    = f.text_field :summary
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :live
    = f.check_box :live
  .field
    = f.label :start_year
    = f.number_field :start_year
  .field
    = f.label :stop_year
    = f.number_field :stop_year
  .actions
    = f.submit 'Save'
