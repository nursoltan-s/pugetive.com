- title('Listing genres')

= new_button(:genre)
%table
  %thead
    %tr
      %th Interest
      %th Name
      %th
      %th

  %tbody
    - @genres.each do |genre|
      %tr
        %td= link_to(genre.interest.name, genre.interest)
        %td= genre.name
        %td= link_to 'Edit', edit_genre_path(genre)
        %td= link_to 'Destroy', genre, :method => :delete, :data => { :confirm => 'Are you sure?' }

