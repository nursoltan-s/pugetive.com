-# REFACTOR: logic to decorator or view model
%section.work.photo.photography{itemscope: true}

  .row
    .medium-3.columns.medium-offset-2.medium-text-right.title-box
      %h3= photo.decorate.title
      - if photo.location.present?
        %p
          %span.location
            = photo.location

      %p
        - if photo.genre
          %span.genre= link_to(photo.genre.name, photo.genre)
        %span.years
          = photo.year


      = photo.decorate.thumbnail

      - if photo.url.present? and photo.live?
        = link_to(raw("Link #{external_icon}"), photo.url)

      = photo.decorate.titles_and_instruments

      .small.subdued.hide-for-small-only
        = raw(photo.decorate.photo_meta)

      = render "works/admin_links", work: photo

    .medium-5.columns.end.info-box
      - if photo.has_thumbnail?
        = thumbnail(photo)
      = photo_link(photo, large_image(photo))

      = render "photos/gallery_info", photo: photo
      - if photo.summary.present?
        %p.summary
          = photo.summary

      .small.subdued.show-for-small-only
        = raw(photo.decorate.photo_meta)
